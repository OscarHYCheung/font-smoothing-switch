{
  "name": "Font Smoothing Switch",
  "version": "0.0.3",
  "manifest_version": 4,
  "description": "Turn on font smoothing by one click",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon48.png"
  },
  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "css": ["css/main.css"]
  }],
  "background": {
    "scripts": ["js/main.js"]
  },
  "permissions": ["tabs", "http://*/*", "https://*/*"]
}
